{
  "name": "multiple-repo-manager",
  "description": "CLI for managing multiple repositories",
  "version": "4.18.0",
  "author": "Mike Donnalley",
  "homepage": "https://github.com/mdonnalley/multiple-repo-manager",
  "repository": "mdonnalley/multiple-repo-manager",
  "bugs": "https://github.com/mdonnalley/multiple-repo-manager/issues",
  "keywords": [
    "multiple package manager",
    "package manager",
    "multiple repo manager",
    "repo manager"
  ],
  "license": "BSD-3-Clause",
  "dependencies": {
    "@inquirer/input": "^3",
    "@oclif/core": "^4",
    "@oclif/multi-stage-output": "^0.8.1",
    "@oclif/table": "^0.4.5",
    "@octokit/plugin-paginate-graphql": "^5.0.0",
    "@octokit/plugin-request-log": "^5.0.0",
    "cli-spinners": "^2.9.2",
    "debug": "^4.3.4",
    "ink": "^5",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^4.1.0",
    "ink-task-list": "^2.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "minimatch": "^10",
    "octokit": "^4",
    "open": "^10.0.3",
    "react": "^18.2.0",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19",
    "@oclif/prettier-config": "^0.2.1",
    "@octokit/types": "^13",
    "@semantic-release/changelog": "^6",
    "@semantic-release/git": "^10",
    "@types/debug": "^4.1.12",
    "@types/js-yaml": "^4.0.3",
    "@types/lodash": "^4.17.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18",
    "@types/react": "^18.2.65",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "chai": "^4.3.4",
    "commitlint": "^19",
    "eslint": "^8.55.0",
    "eslint-config-oclif": "^5.1.1",
    "eslint-config-oclif-typescript": "^3.1.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-xo": "^0.45.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9",
    "lint-staged": "^15",
    "madge": "^8",
    "mocha": "^10",
    "oclif": "^4",
    "prettier": "^3",
    "semantic-release": "^24",
    "sinon": "^19",
    "ts-node": "^10",
    "typescript": "^5",
    "xo": "^0.60.0"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "commitlint": "commitlint --edit $1",
    "lint-staged": "lint-staged",
    "lint": "eslint . --ext .ts",
    "postpack": "rm oclif.manifest.json",
    "posttest": "npm run lint && npm run test:circular-deps",
    "prepack": "rm -rf lib && tsc && oclif manifest && npm shrinkwrap",
    "prepare": "husky && npm run build",
    "readme": "oclif readme --no-aliases && git add README.md",
    "semantic-release": "semantic-release",
    "test:circular-deps": "madge lib/ -c",
    "test": "mocha \"test/**/*.test.ts\" --forbid-only"
  },
  "bin": {
    "multi": "bin/run.js"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/lib",
    "/oclif.manifest.json",
    "/npm-shrinkwrap.json",
    "/bin/run.js",
    "/theme.json"
  ],
  "oclif": {
    "commands": "./lib/commands",
    "bin": "multi",
    "topicSeparator": " ",
    "helpOptions": {
      "hideAliasesFromRoot": true
    },
    "additionalVersionFlags": [
      "-v"
    ],
    "additionalHelpFlags": [
      "-h"
    ],
    "helpClass": "./lib/help",
    "theme": "theme.json",
    "topics": {
      "org": {
        "description": "View information at the org level."
      },
      "task": {
        "description": "Manage local tasks."
      }
    },
    "hooks": {
      "init": "./lib/hooks/init"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "exports": "./lib/index.js"
}
